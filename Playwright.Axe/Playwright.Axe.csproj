<Project>
  <Sdk Name="Microsoft.NET.Sdk" />
  <Sdk Name="Yarn.MSBuild" Version="1.22.17" />

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

	<Target Name="InstallAxeContent" BeforeTargets="BeforeBuild">
		<Yarn Command="install" WorkingDirectory="NodeDependencies" />
		<CallTarget Targets="IncludeAxeContent" />
	</Target>

	<Target Name="IncludeAxeContent">
		<ItemGroup>
			<EmbeddedResource Include="NodeDependencies/node_modules/axe-core/axe.min.js" Link="axe.js">
			</EmbeddedResource>
		</ItemGroup>
	</Target>

	<ItemGroup>
		<PackageReference Include="Microsoft.Playwright" Version="1.20.2"/>
		<PackageReference Include="Yarn.MSBuild" Version="1.22.17" />
	</ItemGroup>
</Project>
